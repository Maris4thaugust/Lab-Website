@using WebSEnR.ViewModel.NewsViewModel
@using WebSEnR.Data.Enum
@model CreateNewsViewModel


<form method="post" asp-action="CreateNews" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Name</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title of the news">
        <span asp-validation-for="Title" class="Text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Url">Link</label>
        <input asp-for="Url" class="form-control" placeholder="Enter the detail link to news">
        <span asp-validation-for="Url" class="Text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description about the news">
        <span asp-validation-for="Description" class="Text-danger"></span>
    </div>
    <div>
        <label asp-for="NewsCategory">News Category</label>
        <select asp-for="NewsCategory" asp-items="@Html.GetEnumSelectList<NewsCategory>()" class="form-control form-control-lg">
            <option>--Select--</option>
        </select>
        <span asp-validation-for="NewsCategory" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter Image URl">
        <span asp-validation-for="Image" class="Text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
