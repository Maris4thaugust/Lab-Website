@model IEnumerable<Activity>
<head>
    <style>
        .img-fluid {
            width: 100%;
            height: 275px;
            object-fit: cover;
        }
    </style>
</head>
<div class="container">
    <a class="btn btn-primary btn-sm" , href="/Activities/CreateActivity">New Activity</a>
    <div class="row">
        @foreach (var item in Model)
        {
            var Category = item.ActivityCategory.ToString();
            if (Category == "AfterUniActivity")
            {
                <div class="col-md-4">
                    <img src="@item.Image" class="img-fluid" alt="Image">
                </div>
                <div class="col-md-8">
                    <div class="article-content">
                        <h2>@item.Title</h2>
                        <p>@item.Description</p>
                        <a href="@item.Url">
                            Thông tin chi tiết
                        </a>
                    </div>
                    <div class="modify-button">
                        <a type="btn btn-success" asp-controller="Activities" asp-action="EditActivity" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a type="btn btn-success" asp-controller="Activities" asp-action="DeleteActivity" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                    </div>
                </div>
            }
        }

    </div>
</div>